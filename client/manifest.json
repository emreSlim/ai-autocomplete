{
  "manifest_version": 3,
  "name": "AI Autocomplete",
  "version": "1.0",
  "description": "Autocomplete input fields with AI suggestions",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Autocomplete Extension"
  }
}
